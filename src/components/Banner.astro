<section
  class="w-full flex flex-col justify-between items-center mx-auto mb-4 mt-20"
>
  <div class="max-w-7xl w-full mx-auto relative bg-secondary-500">
    <div class="img-container h-96 lg:h-[32rem] overflow-hidden">
      <img
        id="phoneImage"
        src=`${import.meta.env.BASE_URL}/image/banner-phone.webp`
        class="object-cover w-full h-[120%] md:h-auto"
      />
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";

  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.to("#phoneImage", {
    scrollTrigger: {
      trigger: "#phoneImage",
      start: "top center",
      end: "60% center",
      scrub: true,
      toggleActions: "restart pause reverse pause",
    },
    y: -10,
    scale: 1.3,
    duration: 2,
  });
</script>
