---
const TEAM = [
  {
    name: "Alex Hidalgo",
    profession: "ceo",
    img: "/image/team/team1.webp",
    socialMedia: {
      facebook: "",
      instagram: "a",
      linkedin: "a",
    },
  },
  {
    name: "Geisson Guadir",
    profession: "CDO",
    img: "/image/team/team2.webp",
    socialMedia: {
      facebook: "a",
      instagram: "a",
      linkedin: "a",
    },
  },
  {
    name: "Guillermo Vera",
    profession: "CTO",
    img: "/image/team/team3.webp",
    socialMedia: {
      instagram: "https://www.instagram.com/guive86/",
      linkedin: "https://www.linkedin.com/in/guillermoverag/",
    },
  },
];
---

<section
  class="flex flex-col justify-between items-center mx-auto mt-20 md:mb-72 relative bg-brand-950"
>
  <div
    class="flex flex-col justify-start items-center max-w-7xl w-screen mx-auto px-[10%] lg:px-10 bg-gradient-to-t from-brand-950 to-brand_purple-950 py-10 min-h-[422px]"
  >
    <h2
      class=`font-stretchpro uppercase text-white text-2xl md:text-3xl lg:text-4xl font-medium my-0 tracking-tight text-center`
    >
      meet our team
    </h2>
    <p
      class="font-poppins text-lg text-pretty font-light text-white/60 mt-0 max-w-xl text-center"
    >
      At Audienze Labs, we're the visionaries driving the future of gaming. Our
      team of seasoned experts works together to unlock new dimensions of player
      engagement.
    </p>
  </div>

  <div
    class="flex flex-col lg:flex-row flex-wrap justify-center items-center gap-0 md:gap-8 max-w-7xl mx-auto px-[10%] lg:px-10 lg:absolute lg:-bottom-40 -mt-40 mb-6"
  >
    {
      TEAM.map(({ name, profession, img, socialMedia }) => (
        <div class="overflow-hidden w-80 lg:max-w-60 h-96 flex flex-col justify-center items-center gap-4 relative group/team">
          <img
            src={`${img}`}
            class="h-[320px] object-cover w-full rounded-lg"
          />
          <div class="z-10 absolute h-[320px] top-8 inset-0 group-hover/team:opacity-0 opacity-100 transition-opacity bg-gradient-to-b from-[rgba(22,73,240,0.71)] via-55% via-[rgba(121,26,242,0.5)] to-[rgba(22,73,240,0.92)] rounded-lg" />

          <div class="w-full max-w-52 min-h-20 flex flex-col justify-center items-center gap-1 absolute bottom-0 bg-gray-100 dark:bg-white z-20">
            <h4 class="uppercase text-black font-medium text-xl">{name}</h4>
            <h5 class="uppercase text-black tracking-[6px] text-sm font-normal dark:font-light">
              {profession}
            </h5>
          </div>

          <div class="w-full max-w-52 py-2 flex justify-center items-center gap-6 absolute top-auto bottom-20 translate-y-40 opacity-0 transition-transform duration-700 group-hover/team:translate-y-0 group-hover/team:opacity-100">
            {socialMedia.facebook && (
              <a
                href={socialMedia.facebook}
                class="size-10 rounded-full overflow-hidden"
                target="_blank"
              >
                <img src={`/image/logo/facebook.webp`} alt="facebook" />
              </a>
            )}
            {socialMedia.instagram && (
              <a
                href={socialMedia.instagram}
                class="size-10 rounded-full overflow-hidden"
                target="_blank"
              >
                <img src={`/image/logo/instagram.webp`} alt="instagram" />
              </a>
            )}
            {socialMedia.linkedin && (
              <a
                href={socialMedia.linkedin}
                class="size-10 rounded-full overflow-hidden"
                target="_blank"
              >
                <img src={`/image/logo/linkedin.webp`} alt="linkedin" />
              </a>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>
