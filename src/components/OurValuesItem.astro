---
import HardworkIcon from "@/components/icons/Hardwork.astro";
import GrowthIcon from "@/components/icons/Growth.astro";
import InnovationIcon from "@/components/icons/Innovation.astro";
import TeamworkIcon from "@/components/icons/Teamwork.astro";

const { title, desc, img } = Astro.props;
---

<div
  class="flex flex-col justify-center items-start p-8 bg-secondary-900/30 gap-4 w-60 h-56"
>
  <div class="bg-secondary-50/50 dark:bg-secondary-950">
    {
      img == "hardwork" && (
        <HardworkIcon className="size-12 p-2 fill-primary-600 dark:fill-primary-300" />
      )
    }
    {
      img == "growth" && (
        <GrowthIcon className="size-12 p-2 fill-primary-600 dark:fill-primary-300" />
      )
    }
    {
      img == "innovation" && (
        <InnovationIcon className="size-12 p-2 fill-primary-600 dark:fill-primary-300" />
      )
    }
    {
      img == "teamwork" && (
        <TeamworkIcon className="size-12 p-2 fill-primary-600 dark:fill-primary-300" />
      )
    }
  </div>
  <div>
    <h5
      class="font-archivo font-semibold dark:font-light text-xs text-left leading-5 tracking-[8px] uppercase text-secondary-800 dark:text-secondary-200 my-0 mb-4"
    >
      {title}
    </h5>
    <p
      class="max-w-md font-archivo text-secondary-700 dark:text-secondary-300 text-base lg:text-lg text-pretty my-0 mx-4 md:mx-0 md:text-left"
    >
      {desc}
    </p>
  </div>
</div>
