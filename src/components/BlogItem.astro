---
import { getDateText } from "@/utils/getDates";

const { slug, img, title, desc, category, date, imgperson, nameperson, align } =
  Astro.props;

const textDate = getDateText(date);
---

<a href=`/agencia/blog/${slug}`>
  <div
    class=`flex flex-col-reverse ${align == 'left' ? 'md:flex-row' : 'md:flex-row-reverse'} justify-start items-center gap-8 group/item`
  >
    <div
      class="flex flex-col justify-center items-start gap-4 py-20 w-full md:max-w-[50%]"
    >
      <div
        class="flex flex-row flex-wrap justify-between items-center gap-x-8 gap-y-4 w-full"
      >
        <div
          transition:name={`blogs-category-${slug}`}
          class="bg-secondary-600/30 border-2 border-primary-600 dark:border-primary-300 p-1 pl-3"
        >
          <h6
            class="uppercase my-0 font-archivo font-light text-[10px] leading-4 tracking-[6px] text-primary-600 dark:text-secondary-50"
          >
            {category}
          </h6>
        </div>
        <div class="flex justify-start items-center gap-2">
          <div class="size-5 overflow-hidden rounded-full">
            <img src={imgperson} alt="" class="size-5 object-cover" />
          </div>
          <p
            class="font-archivo text-base text-primary-600 dark:text-primary-300"
          >
            {nameperson}
          </p>
          <span class="w-0.5 bg-secondary-600 dark:bg-secondary-400 h-3"></span>
          <p
            transition:name={`blogs-date-${slug}`}
            class="font-archivo text-base text-secondary-600 dark:text-secondary-400"
          >
            {textDate}
          </p>
        </div>
      </div>
      <h2
        transition:name={`blogs-title-${slug}`}
        class="font-archivo my-0 capitalize font-medium text-5xl leading-[58px] tracking-tighter text-secondary-950 dark:text-secondary-50"
      >
        {title}
      </h2>
      <p
        transition:name={`blogs-desc-${slug}`}
        class="text-wrap font-archivo mb-0 text-sm font-normal text-secondary-600 dark:text-secondary-300"
      >
        {desc}
      </p>
      <h5
        class="uppercase my-0 font-archivo font-normal dark:font-light text-xs leading-5 tracking-[8px] text-secondary-950 dark:text-secondary-50"
      >
        read more
      </h5>
    </div>
    <div class="overflow-hidden md:w-[48%]">
      <img
        transition:name={`blogs-img-${slug}`}
        src={img}
        alt=""
        class="w-full h-96 object-cover group-hover/item:scale-105 transition-transform duration-500 ease-linear"
      />
    </div>
  </div>
</a>
