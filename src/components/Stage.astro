---
import Arrows from "@/components/icons/Arrows.astro";
---

<section
  class="w-full flex justify-between items-center mx-auto pt-24 md:pt-40 lg:pt-16"
>
  <div
    class="flex flex-row justify-around items-center max-w-7xl w-full mx-auto px-[10%] lg:px-10 relative"
  >
    <div
      class="font-archivo font-light text-base flex flex-row justify-between items-center gap-4 py-8 h-16 max-w-5xl uppercase text-secondary-300"
    >
      <Arrows className="fill-secondary-800/30 size-10 md:size-16" />
      start
    </div>

    <div
      class="font-archivo font-light text-base flex flex-row justify-between items-center gap-4 py-8 h-16 max-w-5xl uppercase text-secondary-300"
    >
      <Arrows className="fill-primary-400/40 size-10 md:size-16" />
      execute
    </div>

    <div
      class="font-archivo font-light text-base flex flex-row justify-between items-center gap-4 py-8 h-16 max-w-5xl uppercase text-secondary-300"
    >
      <Arrows className="fill-primary-300 size-10 md:size-16" />
      launch
    </div>
  </div>
</section>
