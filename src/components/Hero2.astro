---
import GradientLetters from "@/components/GradientLetters.astro";
---

<section class="flex justify-between items-center mx-auto mt-20">
  <div
    class="flex flex-col lg:flex-row justify-between items-center w-screen max-w-7xl mx-auto px-[10%] lg:px-10 relative bg-header-banner bg-cover bg-[-120px] sm:bg-[-50px] md:bg-[0px] xl:bg-center bg-no-repeat min-h-[30rem] lg:min-h-[38rem]"
  >
    <div id="heroText" class="flex flex-col text-left gap-8 mt-14">
      <div class="flex flex-col">
        <div
          class="font-stretchpro text-white uppercase my-0 text-4xl lg:text-7xl lg:leading-[3rem] tracking-tight"
        >
          Unleash
        </div>
        <GradientLetters size="md" name="the power of" />
        <div
          class="font-stretchpro text-white uppercase my-0 font-medium text-4xl lg:text-7xl lg:leading-[3rem] tracking-tight"
        >
          Insights<span class="text-primary-600 dark:text-primary-300">.</span>
        </div>
      </div>
      <div
        class="max-w-[70%] text-gray-200/80 tracking-wide text-base text-pretty"
      >
        With data-driven insights as power-ups, we empower you to reshape gaming
        worlds!
      </div>
      <div
        class="max-w-[26rem] text-gray-300/70 tracking-wide text-base text-pretty"
      >
        <a
          href="/services/"
          class="bg-brand-600 hover:bg-brand-900 px-8 py-2 text-white text-xs font-light rounded-3xl"
          >Our Services</a
        >
      </div>
    </div>
  </div>
</section>
