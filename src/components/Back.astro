---
import ArrowRight from "@/components/icons/ArrowRight.astro";

const { href } = Astro.props;
let link = href;
if (href.slice(-1) != "/") {
  link = `${href}/`;
}
---

<div class="absolute top-0 left-10">
  <a
    href={link}
    class="bg-brand-800 dark:bg-white p-2 rounded-md drop-shadow-xl flex justify-center items-center w-10 hover:bg-brand-950 dark:hover:bg-brand-100"
  >
    <span class="hidden">previous page</span>
    <ArrowRight
      className="stroke-white dark:stroke-brand_cyan inline rotate-180"
    />
  </a>
</div>
