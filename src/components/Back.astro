---
import ArrowRight from "@/components/icons/ArrowRight.astro";

const { href } = Astro.props;
---

<div class="absolute top-28 left-24">
  <a
    href={href}
    class="bg-white p-2 rounded-md drop-shadow-xl flex justify-center items-center w-10 hover:bg-brand-100"
  >
    <ArrowRight
      className="stroke-brand-500 dark:stroke-brand_cyan inline rotate-180"
    />
  </a>
</div>
