---
import DobleLetters from "@/components/DobleLetters.astro";
---

<section class="w-full mx-auto mt-52 mb-36">
  <div
    class="flex flex-col justify-around items-center max-w-7xl w-full mx-auto relative gap-8"
  >
    <div class="flex flex-col md:flex-row justify-center items-center gap-4">
      <h1
        class="font-stretchpro text-secondary-950 dark:text-secondary-50 uppercase my-0 font-medium text-5xl lg:text-8xl lg:leading-[7rem] tracking-tight"
      >
        about
      </h1>
      <p
        class="max-w-80 text-secondary-950/60 dark:text-secondary-50/60 tracking-wide text-base text-pretty text-center font-medium dark:font-normal"
      >
        Embark on an adventure with Audienze Labs, where your gaming journey
        unfolds through immersive experiences tailored to your desires.
      </p>
      <DobleLetters name="US" />
    </div>
    <div class="relative w-full h-full overflow-hidden">
      <div
        class="w-[200%] h-[70%] bg-primary-600 dark:bg-primary-300 absolute -bottom-[30%] left-[-50%] rotate-[-10deg]"
      >
      </div>
      <img
        src={`${import.meta.env.BASE_URL}/image/gaming-tablet-banner.webp`}
        alt=""
        class="object-contain w-full h-[350px] md:h-[450px] lg:h-[634px] rotate-[-30deg] p-5 drop-shadow-lg animate-movelaptop"
      />
    </div>
  </div>
</section>
