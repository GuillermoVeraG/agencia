---
import TitleVertical from "./TitleVertical.astro";

const FAQS = [
  {
    question: "What Services Does Your Design Agency Offer?",
    answer:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum convallis.",
  },
  {
    question: "How Do I Get Started With A Design Project?",
    answer:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum convallis.",
  },
  {
    question: "What Industries Do You Serve?",
    answer:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum convallis.",
  },
  {
    question: "How Long Does A Typical Design Project Take?",
    answer:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum convallis.",
  },
  {
    question: "What Is The Cost Of Your Design Services?",
    answer:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum convallis.",
  },
];
---

<section
  class="w-full flex flex-col justify-between items-center mx-auto mt-20 mb-36"
>
  <div
    class="flex flex-col justify-around items-center text-center max-w-7xl w-full mx-auto px-[10%] lg:px-10 relative"
  >
    <TitleVertical
      subtitlePrimary="frequently asked "
      subtitleSecondary="questions"
      title="overview"
      desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum convallis."
      subtitleBreak
    />
  </div>

  <div
    id="faq-container"
    class="w-full max-w-md md:max-w-2xl lg:max-w-4xl xl:max-w-6xl flex flex-col justify-between items-center gap-4 mt-8"
  >
    {
      FAQS.map(({ question, answer }, index) => {
        return (
          <details class="bg-secondary-900/40 w-full flex flex-col justify-center items-center gap-8 cursor-pointer group/faq hover:bg-secondary-900/50">
            <summary class="w-full flex justify-center items-center gap-8 p-16 pb-12 relative">
              <h2 class="hidden md:block text-secondary-950 dark:text-secondary-50 text-6xl font-medium absolute top-auto bottom-auto right-auto left-8">
                0{index + 1}
              </h2>
              <h3 class="w-full max-w-[80%] md:max-w-[75%] text-2xl font-light text-center text-pretty capitalize text-secondary-950 dark:text-secondary-50">
                {question}
              </h3>
              <div class="absolute top-auto bottom-auto left-auto right-8">
                <button
                  data-open="false"
                  class="butOpenClose w-8 h-8 flex justify-center items-center
                before:content-[''] before:content-center before:bg-secondary-950 before:dark:bg-white before:w-8 before:h-0.5
                after:content-[''] after:content-center after:bg-secondary-950 after:dark:bg-white after:w-0.5 after:h-8 after:-translate-x-4 after:transition-transform after:duration-500"
                />
              </div>
            </summary>
            <div class="w-full max-w-[80%] mx-auto mb-8">
              <p class="text-lg font-light text-center text-secondary-800/90 dark:text-secondary-100/70 ">
                {answer}
              </p>
            </div>
          </details>
        );
      })
    }
  </div>
</section>

<style>
  details[open] summary button::after {
    transform: rotate(90deg) translateY(1rem);
    transform-origin: center;
  }
</style>
